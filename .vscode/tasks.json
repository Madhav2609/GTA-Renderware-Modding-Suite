{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run PyQt Application",
			"type": "shell",
			"command": "python",
			"args": [
				"frontend/main.py"
			],
			"group": "build",
			"isBackground": false,
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "Build Backend",
			"type": "shell",
			"command": "cmake",
			"args": [
				"--build", ".", "--config", "Debug"
			],
			"group": "build",
			"isBackground": false,
			"options": {
				"cwd": "${workspaceFolder}/backend/build"
			}
		},
		{
			"label": "Build Executable",
			"type": "shell",
			"command": "python",
			"args": [
				"build_simple.py"
			],
			"group": "build",
			"isBackground": false,
			"options": {
				"cwd": "${workspaceFolder}"
			}
		}
	]
}